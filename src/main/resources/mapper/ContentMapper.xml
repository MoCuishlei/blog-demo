<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pro.blog.dao.ContextMapper">

    <resultMap id="article" type="pro.blog.dto.Article">
        <result property="id" column="id" javaType="String"/>
        <result property="content" column="context" typeHandler="pro.blog.config.mybatis.ListTypeHandler"/>
    </resultMap>

    <!-- SQL 映射语句和映射配置 -->
    <select id="getContext" resultMap="article">
        SELECT *
        FROM ARTICLE
        WHERE id = #{id}
    </select>
</mapper>
